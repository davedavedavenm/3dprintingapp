# Docker Environment Configuration for 3D Print Quoting System
# Copy this file to .env and modify as needed

# Security
SECRET_KEY=change_this_to_a_random_secure_string

# Database Configuration
POSTGRES_DB=quoting_db
POSTGRES_USER=quoting_user
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://quoting_user:change_this_to_a_secure_password@postgres:5432/quoting_db

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# PayPal Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_SANDBOX=true

# Material Pricing ($ per gram)
PLA_RATE=0.025
ABS_RATE=0.028
PETG_RATE=0.035
TPU_RATE=0.045
TIME_RATE=0.15
OVERHEAD_MULTIPLIER=1.35

# Application Configuration
APP_PORT=5000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost
VIRUS_SCAN_ENABLED=false
MAX_CONTENT_LENGTH=104857600

# Development Tools
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin_password
ENVIRONMENT=production
REACT_APP_API_URL=http://localhost:5000/api/v1
REACT_APP_ENVIRONMENT=production
